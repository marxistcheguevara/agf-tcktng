
<!-- Slider Section Start -->
<div class="flexslider" id="home-slider">
  <ul class="slides">
    <% @competitions.each { |competition| %>
        <% competition.events.each { |event| %>
        <li style="background-image:url('<%= event.image_url %>'); background-size:cover; background-position:center center;">
          <div class="descr">
            <h2><%= competition.name %></h2>
            <h2><%= event.name %></h2>
            <p><%= event.description %></p>
            <div class="descr_link"><a href="/<%=I18n.locale%>/event/<%= event.id %>"><%= t('aboutEvent') %></a></div>
          </div>
        </li>
        <% } %>
    <% } %>
  </ul>
</div>
<!-- Services Section Start -->

<div class="page_header">
  <div class="center">
    <img class="page_header_logo fl" src="/images/events_logo.png" alt="">
    <h1 class="page_header_title fl">><%= t('upcomingEvents') %></h1>
    <ul class="page_header_nav fr">
      <li><a href="/<%=I18n.locale%>" style="color:white"><%= t('mainPage') %></a></li>
      <!--<li><a class="active" href="events.html">Tədbirlər</a></li>-->
    </ul>
    <div class="cf"></div>
  </div>
</div>
<div class="events_content">
  <% @competitions.each { |competition| %>
      <div class="events_selection">
        <div class="events_selection_center fl">
          <a href="#"><%= competition.name %></a>
        </div>
        <div class="cf"></div>
      </div>
      <div class="events_list">
        <% competition.events.each { |event| %>
            <div class="events_list_item fl">
              <div class="events_list_item_pic">
                <a href="/<%=I18n.locale%>/buy-ticket/<%= event.id %>"><img src="<%= event.image_url %>" alt=""></a>
                <div class="events_list_item_pic_hover">
                  <p><a href="/<%=I18n.locale%>/event/<%= event.id %>">><%= t('aboutEvent') %></a></p>
                </div>
              </div>
              <div>
                <div class="leftevpart">
                  <ul class="events_list_item_date fl">
                    <li class="first_date"><%= event.datetime.strftime("%d") %></li>
                    <li><%= event.datetime.strftime("%B")%></li>
                    <li><%= event.datetime.strftime("%Y") %></li>
                  </ul>
                  <div class="events_list_item_line fl"> </div>
                </div>
                <div class="events_list_item_desc"><%= event.name %></div>
                <div class="cf"></div>
              </div>
            </div>
            <div class="events_list_item bigitem fl">
              <div class="events_list_item_pic">
                <a href="event_opened.html"><img src="css/images/events/events5.jpg" alt=""></a>
                <div class="events_list_item_pic_hover">
                  <p><a href="event_opened.html"><%= t('viewMore') %></a></p>
                </div>
              </div>
              <div>
                <div class="leftevpart">
                  <ul class="events_list_item_date fl">
                    <li class="first_date">04</li>
                    <li>Jul</li>
                    <li>2013</li>
                  </ul>
                  <div class="events_list_item_line fl"> </div>
                </div>
                <div class="events_list_item_desc">
                </div>
                <div class="cf"></div>
              </div>
            </div>
        <% } %>
      </div>
  <% } %>
  <hr style="color: #fff;"/>
</div>
