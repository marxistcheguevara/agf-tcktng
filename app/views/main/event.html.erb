
<div class="page_header">
  <div class="center">
    <img class="page_header_logo fl" src="/images/events_logo.png" alt="">
    <h1 class="page_header_title fl"><%= t('about_event') %></h1>
    <ul class="page_header_nav fr">
      <li><a href="/<%=I18n.locale%>" style="color:white"><%= t('mainPage') %></a></li>
      <!--<li><a class="active" href="events.html">Tədbirlər</a></li>-->
    </ul>
    <div class="cf"></div>
  </div>
</div>

<div class="event_opened_content">
  <div class="event_image">
    <div class="event_pic_left fl" id="slider_event">
      <ul class="slides">
        <li style="background-image:url('<%= @event.image_url %>');"></li>
      </ul>
      <div class="frame_top_left"></div>
      <div class="frame_top_right"></div>
      <div class="frame_bottom_left"></div>
      <div class="frame_bottom_right"></div>
    </div>
    <div class="event_pic_right fl">
      <div class="event_information">
        <h3><%= t('aboutEvent') %>:</h3>
        <p class="event_information_date"><%= t('date') %><span><%= @event.datetime.strftime(" %B")%> 2016-cı il</span></p>
        <p class="event_information_place"><%= t('place') %><span><%= t('MGA') %></span></p>
        <p class="event_information_partners"><%= t('competition') %><span><%= @event.competition.name %></span></p>
        <p class="event_information_desc"><%= t('additionalInfo') %><span><%= @event.description %></span></p>
        <%= @event.program.html_safe %>
      </div>
    </div>
    <div class="cf"></div>
  </div>
  <div class="event_desc">
  </div>
  <div class="event_desc">
    <a href="/<%=I18n.locale%>/buyTickets/<%= @event.id %>" class="btn btn-lg btn-primary" style="width: 100%;"><%= t('wantToBuyTicket') %></a>
  </div>
</div>