<div class="modal-header">
  <h3 class="modal-title"><%= t('modalHeader') %></h3>
</div>
<div class="modal-body">
  <div class="conainer">
    <h3><%= t('chosenPlaces') %></h3>
    <span ng-repeat="selectedSeat in selectedSeats">{{ selectedSeat.seat.real_row + selectedSeat.seat.real_column }} <span ng-if="!($index == selectedSeats.length - 1)">, </span></span>
    <hr/>
    <h3><%= t('writeYourInfo') %></h3>
    <div class="form-group">
      <label for="exampleInputEmail1"><%= t('email') %></label>
      <input type="email" ng-model="user.email" class="form-control" id="exampleInputEmail1" placeholder="example@example.com">
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1"><%= t('phone') %></label>
      <input type="text" ng-model="user.phone" class="form-control" id="exampleInputPassword1" placeholder='<%= t('phonenumber') %>'>
    </div>
    <hr/>
    <div class="form-group">
      <label for="terms"><a href="/<%= I18n.locale %>/terms" target="_blank"><%= t('acceptingTerms') %></a></label>
      <input type="checkbox" id="terms" ng-model="terms">
    </div>
  </div>

</div>
<div class="modal-footer">
  <button class="btn btn-success" type="button" ng-click="ok()" ng-disabled="(user.phone == '' && user.email == '') || !terms"><%= t('checkout') %></button>
  <button class="btn btn-danger" type="button" ng-click="cancel()"><%= t('cancelPayment') %></button>
</div>